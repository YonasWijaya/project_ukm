<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".KasHarianFragment">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnTambahIsi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tambah isi"
                android:textAlignment="center"
                android:padding="16dp"
                android:layout_margin="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TableLayout
                android:id="@+id/tableJurnalHarian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="150dp"
                android:layout_marginHorizontal="30dp"
                android:stretchColumns="*"
                android:background="@drawable/table_line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <TableRow>
                    <TextView
                        android:text="Keterangan"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:text="Pemasukan (Rp)"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:text="Pengeluaran (Rp)"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:text="Saldo (Rp)"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:text="Pengaturan"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_marginHorizontal="10dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"/>
                </TableRow>
                <TableRow
                    android:padding="5dp">
                    <TextView
                        android:text="Saldo Awal"
                        android:layout_width="0dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/saldoAwal"
                        android:text="12345"
                        android:layout_width="0dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_marginHorizontal="10dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"/>
                </TableRow>
            </TableLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/kasHarianList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_marginHorizontal="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tableJurnalHarian"/>
            <TextView
                android:id="@+id/pemasukanHarian1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Total Pemasukan: "
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/kasHarianList"/>
            <TextView
                android:id="@+id/pemasukanHarian2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12345"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toEndOf="@id/pemasukanHarian1"
                app:layout_constraintTop_toBottomOf="@id/kasHarianList"/>
            <TextView
                android:id="@+id/pengeluaranHarian1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Total Pengeluaran: "
                android:layout_marginLeft="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pemasukanHarian1"/>
            <TextView
                android:id="@+id/pengeluaranHarian2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12345"
                app:layout_constraintStart_toEndOf="@id/pengeluaranHarian1"
                app:layout_constraintTop_toBottomOf="@id/pemasukanHarian1"/>
            <TextView
                android:id="@+id/saldoAkhir1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Saldo Akhir: "
                android:layout_marginLeft="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pengeluaranHarian1"/>
            <TextView
                android:id="@+id/saldoAkhir2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12345"
                app:layout_constraintStart_toEndOf="@id/saldoAkhir1"
                app:layout_constraintTop_toBottomOf="@id/pengeluaranHarian1"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>